{% trans_default_domain 'FOSUserBundle' %}
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8">
                    <div class="jumbotron">
                        <h4>Mes réservations</h4>
                        <p class="lead">Ici vous trouverez vos réservations. Attention, toute anulation est irréversible.</p>
                        <hr class="my-4">
                        {% for resa in user.reservation %}
                        <p>
                            {{ resa.commandDetails.categoryHasSeason.name}}
                        </p>
                        <p>{{ resa.reservationStart | date }}</p>
                        <p>{{ resa.reservationEnd | date }}</p>
                        <h5>Prix total : {{ resa.totalPrice }} €</h5>
                        <a class="btn btn-success" href="#" role="button">Télécharger le PDF</a>
                        <a class="btn btn-danger" href="#" role="button">Annuler la réservation</a>
                        <form method="post" action="{{ path ('resa.annuation', {id: resa.id}) }}" onsubmit="return confirm('MODIFIER ?')" style="margin-top: 5px;">
                            <input type="hidden" name="_method" value="SUBMIT">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ resa.id) }}">
                            <button class="btn btn-danger btn-xs">EDIT</button>
                        </form>
                        {% endfor %}
                    </div>
                </div>
                <div class="offset-md-1 col-md-3">
                    <div class="jumbotron">
                        <h4>Mes infos</h4>
                        <hr class="my-4">
                        <p><strong>Email:</strong> {{ user.email }}</p>
                        <hr class="my-4">
                        <p><strong>Téléphone:</strong> {{ user.phone }}</p>
                        <p><strong>Date de naissance:</strong> {{ user.birthdate | date("d/m/Y") }}</p>
                        <hr class="my-4">
                        <p><strong>Adresse:</strong> {{ user.address }}</p>
                        <p>{{ user.postalCode }} {{ user.city }}</p>
                        <p>{{ user.country }}</p>

                        <a class="btn btn-success" href="{{ path ('fos_user_profile_edit') }}" role="button">Modifier profil</a>
                        <a class="btn btn-secondary mt-2 mb-2" href="{{ path ('fos_user_change_password') }}" role="button">Changer mon mot de passe</a>
                        <a class="btn btn-danger btn-sm" href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </div>
                </div>

            </div>
        </div>

