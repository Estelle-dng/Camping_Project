{% extends ('baseAdmin.html.twig') %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset ('assets/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

    {% block main %}
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Liste des tarifs journaliers selon les logements
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path ('Dashboard') }}"><em class="fa fa-dashboard"></em>Accueil</a></li>
                    <li><a href="#">Liste</a></li>
                    <li class="active"><a href="{{ path ('listeFAQ') }}">FAQ</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h1>Gérer les tarifs</h1>

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                <a href="{{ path ('admin.listetarif.create')}}" class="btn btn-success">Créer un nouveau tarif</a>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="table_media" class="table table-bordered table-striped">
                                    {%  for tarif in tarifs %}
                                        <thead>
                                        <tr>
                                            <th>{{ tarif.name }} / {{ tarif.price }}€</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>Pour la {{ tarif.season }} pour la categorie {{ tarif.category }}</td>
                                            <td>
                                                <a href="{{ path ('admin.tarif.edit', {id: tarif.id}) }}" class="btn btn-success">Editer</a>
                                                <form method="post" action="{{ path ('admin.media.delete', {id: tarif.id}) }}" onsubmit="return confirm('Supprimer cette image ?')" style="margin-top: 5%;">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarif.id) }}">
                                                    <button class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </td>
                                        </tr>
                                        </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
    {% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{ asset ('assets/admin/bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset ('assets/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js')}}"></script>
    <script>
        $('#table_media').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
            }
        });
    </script>
    <!-- DataTables -->
{% endblock %}
